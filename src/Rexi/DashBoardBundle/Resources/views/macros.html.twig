{% macro widgetBlock(title, titleSmall, content) %}
    {% if title is not empty  %}
    <div class="row">
        <div class="col-xs-12 col-sm-7 col-md-7 col-lg-4">
            <h1 class="page-title txt-color-blueDark">
                <i class="fa fa-user fa-fw "></i> 
                {{ title }}
            </h1>
        </div>
    </div>
    {% endif %}
            
    <div class="row">
        <article class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
            <div class="jarviswidget jarviswidget-color-darken" id="wid-id-0" data-widget-editbutton="false">
                <header>
                    <span class="widget-icon"> <i class="fa fa-user"></i> </span>
                    <h2>{{ titleSmall }}</h2>
                </header>
                <div>
                    <div class="widget-body no-padding">
                        {% autoescape false %}
                        {{ content }}
                        {% endautoescape %}
                    </div>
                </div>
            </div>
        </article>
    </div>     
{% endmacro %}

{% macro infoRow(title, value) %}
    <div class="row">
        <section>
            <div class="col col-1">
                <b>{{ title }}:</b>
            </div>
            <div class="col col-1">
                {{ value }}
            </div>
       </section> 
   </div>
{% endmacro %}

{% macro modal(id, title, content, yes, no, action) %}
    <div class="modal inmodal" id="{{ id }}" tabindex="-1" role="dialog" aria-hidden="true">
        <div class="modal-dialog">
        <div class="modal-content animated flipInY">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Zamknij</span></button>
                    <i class="fa fa-dollar modal-icon"></i>
                    <h4 class="modal-title">{{ title }}</h4>
                </div>
                <div class="modal-body">
                    {{ content|raw }}
                </div>
                <form action="{{action}}" method="POST">
                    <div class="modal-footer">
                        <button type="button" class="btn btn-danger" data-dismiss="modal">{{ no }}</button>
                        <button type="submit" class="btn btn-success">{{ yes }}</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
{% endmacro %}